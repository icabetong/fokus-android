<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Fokus.Theme.Base" parent="Fokus.Theme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="Fokus.Theme.Core" parent="Fokus.Theme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Fokus.Theme.Core.Navigation"/>
    <style name="Fokus.Theme.Core.Editor"/>

    <!-- Components -->
    <style name="Fokus.Component.Viewer" parent="Fokus.Component.Viewer.Bridge">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>