<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Fokus.Theme.Base" parent="Fokus.Theme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Fokus.Theme.Core" parent="Fokus.Theme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Fokus.Theme.Core.Navigation">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Components -->
    <style name="Fokus.Component.Viewer" parent="Fokus.Component.Viewer.Bridge">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    <style name="Fokus.Component.BottomSheet" parent="Fokus.Component.BottomSheet.Bridge">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

</resources>