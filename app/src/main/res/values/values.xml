<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Fokus"/>
    <!-- Base application theme -->
    <style name="Fokus.Theme" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorOnPrimary">@color/theme_on_primary</item>
        <item name="colorPrimaryContainer">@color/theme_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/theme_on_primary_container</item>
        <item name="colorSecondary">@color/theme_secondary</item>
        <item name="colorOnSecondary">@color/theme_on_secondary</item>
        <item name="colorSecondaryContainer">@color/theme_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/theme_on_secondary_container</item>
        <item name="colorTertiary">@color/theme_tertiary</item>
        <item name="colorOnTertiary">@color/theme_on_tertiary</item>
        <item name="colorTertiaryContainer">@color/theme_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/theme_on_tertiary_container</item>
        <item name="colorError">@color/theme_error</item>
        <item name="colorOnError">@color/theme_on_error</item>
        <item name="colorErrorContainer">@color/theme_error_container</item>
        <item name="colorOnErrorContainer">@color/theme_on_error_container</item>
        <item name="android:colorBackground">@color/theme_background</item>
        <item name="colorOnBackground">@color/theme_on_background</item>
        <item name="colorSurface">@color/theme_surface</item>
        <item name="colorOnSurface">@color/theme_on_surface</item>
        <item name="colorSurfaceVariant">@color/theme_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/theme_on_surface_variant</item>
        <item name="colorOutline">@color/theme_outline</item>
        <item name="colorOnSurfaceInverse">@color/theme_inverse_on_surface</item>
        <item name="colorSurfaceInverse">@color/theme_inverse_surface</item>
        <item name="colorPrimaryInverse">@color/theme_inverse_primary</item>

        <item name="preferenceTheme">@style/Fokus.Component.Preference</item>
        <item name="bottomSheetDialogTheme">@style/Fokus.Component.BottomSheet</item>
        <item name="alertDialogTheme">@style/Fokus.Component.Dialog</item>

        <item name="appBarLayoutStyle">@style/Fokus.Widget.AppBar</item>
        <item name="toolbarStyle">@style/Fokus.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Fokus.Widget.Toolbar.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Fokus.Widget.Toolbar.Overflow</item>
        <item name="switchStyle">@style/Fokus.Widget.Switch</item>
        <item name="floatingActionButtonStyle">@style/Fokus.Widget.FAB</item>
        <item name="extendedFloatingActionButtonStyle">@style/Fokus.Widget.FAB.Extended</item>
        <item name="snackbarStyle">@style/Fokus.Widget.Snackbar</item>

        <item name="md_background_color">?attr/colorSurface</item>
        <item name="md_corner_radius">@dimen/surface_corner_radius</item>
    </style>

    <style name="Fokus.Component.Preference" parent="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceCategoryTitleTextAppearance">@style/Fokus.TextAppearance.Label.Large</item>
    </style>
    <style name="Fokus.Component.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="cornerFamily">rounded</item>
        <item name="dialogCornerRadius">@dimen/surface_corner_radius</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="buttonBarPositiveButtonStyle">@style/Fokus.Widget.Button.Text.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Fokus.Widget.Button.Text.Dialog</item>
    </style>
    <style name="Fokus.Component.Viewer.Bridge" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>
    <style name="Fokus.Component.BottomSheet.Bridge" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Fokus.Component.BottomSheet.Base</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    <style name="Fokus.Component.BottomSheet.Base" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_sheet</item>
        <item name="android:layout_marginStart">@dimen/bottom_sheet_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/bottom_sheet_margin_horizontal</item>
    </style>

    <style name="Fokus.Widget.AppBar" parent="Widget.Material3.AppBarLayout"/>
    <style name="Fokus.Widget.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="contentInsetStart">@dimen/toolbar_keyline</item>
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/Fokus.TextAppearance.Title.Large</item>
        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/toolbar_padding_horizontal</item>
    </style>
    <style name="Fokus.Widget.Toolbar.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorOnSurfaceVariant</item>
        <item name="android:minWidth">48dp</item>
    </style>
    <style name="Fokus.Widget.Toolbar.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="srcCompat">@drawable/ic_outline_more_vert_24</item>
        <item name="tint">?attr/colorOnSurfaceVariant</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="Fokus.Widget.Button" parent="Widget.Material3.Button">
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Fokus.Widget.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconTint">@color/theme_primary</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Fokus.Widget.Button.Text" parent="Widget.Material3.Button.TextButton"/>
    <style name="Fokus.Widget.Button.Text.Dialog" parent="Widget.Material3.Button.TextButton.Dialog"/>
    <style name="Fokus.Widget.Chip" parent="Widget.Material3.Chip.Filter"/>
    <style name="Fokus.Widget.Switch" parent="Widget.AppCompat.CompoundButton.Switch"/>
    <style name="Fokus.Widget.FAB" parent="Widget.Material3.FloatingActionButton.Primary"/>
    <style name="Fokus.Widget.FAB.Extended" parent="Widget.Material3.ExtendedFloatingActionButton.Primary"/>
    <style name="Fokus.Widget.TextInput.Layout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/color_text_input_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="Fokus.Widget.Snackbar" parent="Widget.Material3.Snackbar"/>

    <!-- TextAppearance -->
    <style name="Fokus.TextAppearance.Display.Large" parent="TextAppearance.Material3.DisplayLarge"/>
    <style name="Fokus.TextAppearance.Display.Medium" parent="TextAppearance.Material3.DisplayMedium"/>
    <style name="Fokus.TextAppearance.Display.Small" parent="TextAppearance.Material3.DisplaySmall"/>
    <style name="Fokus.TextAppearance.Headline.Large" parent="TextAppearance.Material3.HeadlineLarge"/>
    <style name="Fokus.TextAppearance.Headline.Medium" parent="TextAppearance.Material3.HeadlineMedium"/>
    <style name="Fokus.TextAppearance.Headline.Small" parent="TextAppearance.Material3.HeadlineSmall"/>
    <style name="Fokus.TextAppearance.Title.Large" parent="TextAppearance.Material3.TitleLarge"/>
    <style name="Fokus.TextAppearance.Title.Medium" parent="TextAppearance.Material3.TitleMedium"/>
    <style name="Fokus.TextAppearance.Title.Small" parent="TextAppearance.Material3.TitleSmall"/>
    <style name="Fokus.TextAppearance.Body.Large" parent="TextAppearance.Material3.BodyLarge"/>
    <style name="Fokus.TextAppearance.Body.Medium" parent="TextAppearance.Material3.BodyMedium"/>
    <style name="Fokus.TextAppearance.Body.Small" parent="TextAppearance.Material3.BodySmall"/>
    <style name="Fokus.TextAppearance.Label.Large" parent="TextAppearance.Material3.LabelLarge"/>
    <style name="Fokus.TextAppearance.Label.Medium" parent="TextAppearance.Material3.LabelMedium"/>
    <style name="Fokus.TextAppearance.Label.Small" parent="TextAppearance.Material3.LabelSmall"/>

    <!-- Animations -->
    <style name="Fokus.Animations"/>
    <style name="Fokus.Animations.Slide">
        <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
    </style>

    <!-- Used for Adaptive Launcher Icon Background -->
    <color name="ic_launcher_background">#000051</color>
</resources>